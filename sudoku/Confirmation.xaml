<Window x:Class="sudoku.Confirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sudoku"
        mc:Ignorable="d"
        Title="Confirmation" Height="200" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Height="50" Width="200" FontSize="15" HorizontalContentAlignment="Center" Content=" Are you sure to exit?&#x0a;Progress will be saved"></Label>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0, 50, 0, 0">
                <Button Height="30" Width="50" Margin="20,0,0,0" Content="Yes" FontSize="12" Background="#FF2AAC0A" BorderBrush="#FF2AAC0A" Click="Yes_Click"></Button>
                <Button Height="30" Width="50" Margin="50,0,0,0" Content="No" FontSize="12" Background="#FFCB380F" BorderBrush="#FFCB380F" Click="No_Click"></Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
