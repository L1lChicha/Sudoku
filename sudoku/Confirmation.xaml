<Window x:Class="sudoku.Confirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sudoku"
        mc:Ignorable="d"
        Title="Confirmation" Height="220" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Border Height="220" BorderBrush="Black" BorderThickness="2" CornerRadius="2"/>

        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Height="71" Width="232" FontSize="22" HorizontalContentAlignment="Center" Content=" Are you sure to exit?&#x0a;Progress will be saved" Margin="0,20,0,0"></Label>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0, 30, 0, 20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Height="60" Width="160" Content="Yes" FontSize="12" Background="#FF2AAC0A" BorderBrush="#FF2AAC0A" Click="Yes_Click"></Button>
                <Button Height="60" Width="160" Margin="20,0,0,0" Content="No" FontSize="12" Background="#FFCB380F" BorderBrush="#FFCB380F" Click="No_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
