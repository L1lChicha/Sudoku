<Window x:Class="sudoku.LevelSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sudoku"
        mc:Ignorable="d"
        Title="LevelSelect" Height="200" Width="150" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Select difficulty" HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16"/>
        <RadioButton x:Name="easyRadioButton" Content="Easy" HorizontalAlignment="Left" Margin="44,66,0,0" VerticalAlignment="Top" Checked="easyRadioButton_Checked"/>
        <RadioButton x:Name="middleRadioButton" Content="Middle" HorizontalAlignment="Left" Margin="44,102,0,0" VerticalAlignment="Top" Checked="middleRadioButton_Checked"/>
        <RadioButton x:Name="hardRadioButton" Content="Hard" HorizontalAlignment="Left" Margin="44,135,0,0" VerticalAlignment="Top" Checked="hardRadioButton_Checked"/>

    </Grid>
</Window>
